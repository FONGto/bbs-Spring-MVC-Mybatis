<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"      
 "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">
 <mapper namespace="com.fong2.dao.SectionDao">
 	
 	<select id="getAll" resultType="com.fong2.entity.Section">
 		select	
 			id,name,sort
		from 
			section
 	</select>
 	<select id="findBySectionId" resultType="com.fong2.entity.Section">
 		select	
 			id,name,sort
		from 
			section
		where
			id=#{sectionId}
 	</select>
 </mapper>